@model IEnumerable<OpenNotes.Models.NoteModel>

@{
    ViewBag.Title = "Index";
}

<h2>Notatki</h2>

<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new {  id=item.NoteId  }) |
            @Html.ActionLink("Szczegóły", "Details", new {  id=item.NoteId  }) |
            @Html.ActionLink("Usuń", "Delete", new {  id=item.NoteId  })
        </td>
    </tr>
}

</table>
